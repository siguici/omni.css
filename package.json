{
  "name": "styliz-monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.16",
    "pnpm": ">=9.7",
    "npm": "prefer using pnpm"
  },
  "packageManager": "pnpm@9.7.0",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "dev@sikessem.com",
    "url": "https://github.com/siguici"
  },
  "keywords": [
    "styliz",
    "framework",
    "tailwindcss",
    "bootstrap-like",
    "plugin",
    "utilities",
    "componants",
    "css",
    "typescript"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm -C packages/styliz build",
    "clean": "rimraf packages/styliz/js && rimraf packages/styliz/ts",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "debug": "pnpm check && pnpm test",
    "dev": "vite",
    "fix": "pnpm lint  pnpm format",
    "format": "biome format --write .",
    "inspect": "node --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check --write .",
    "test": "vitest run",
    "test.ui": "vitest --ui",
    "test.cov": "vitest run --coverage",
    "test.watch": "vitest",
    "start": "vite --open"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/node": "^22.2.0",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^6.0.1",
    "postcss-nested": "^6.2.0",
    "rimraf": "^6.0.1",
    "styliz": "workspace:*",
    "tailwindcss": "^3.4.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
