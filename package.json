{
  "name": "styliz-monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.11",
    "pnpm": ">=8.14",
    "npm": "prefer using pnpm"
  },
  "packageManager": "pnpm@8.14.3",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "dev@sikessem.com",
    "url": "https://github.com/siguici"
  },
  "keywords": [
    "styliz",
    "framework",
    "tailwindcss",
    "bootstrap-like",
    "plugin",
    "utilities",
    "componants",
    "css",
    "typescript"
  ],
  "scripts": {
    "build": "pnpm clean && cd packages/styliz && pnpm build",
    "clean": "rimraf packages/styliz/js && rimraf packages/styliz/ts",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "debug": "pnpm check && pnpm test",
    "dev": "vite",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "inspect": "node --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check --apply-unsafe .",
    "test": "vitest run",
    "test.ui": "vitest --ui",
    "test.cov": "vitest run --coverage",
    "test.watch": "vitest",
    "start": "vite --open"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/node": "^20.11.7",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-load-config": "^5.0.2",
    "postcss-nested": "^6.0.1",
    "rimraf": "^5.0.5",
    "styliz": "workspace:*",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
