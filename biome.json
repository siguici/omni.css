{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./packages/ui/biome.json", "./website/biome.json"],
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", "vendor", "dist"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "useShorthandArrayType": "error",
        "noShoutyConstants": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": ["node_modules", "vendor", "dist"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": ["node_modules", "vendor", "dist"]
  }
}
